/* pages/user/user.wxss */
.header {
  height: 194rpx;
  color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  background-color: #e46569;
}

.header .userMessage {
  height: 120rpx;
  display: flex;
  align-items: center;
}

.header .userMessage .photo {
  height: 120rpx;
  width: 120rpx;
  margin-right: 30rpx;
}

.header .userMessage .photo image {
  width: 100%;
  height: 100%;
  border: 2rpx solid #fff;
  border-radius: 50%;
  box-shadow: 0 4rpx 14rpx 2rpx rgba(118, 0, 0, 0.50);
}

.header .userMessage .name .nickname {
  font-size: 32rpx;
  width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.header .userMessage .name text {
  font-size: 18rpx;
  opacity: 0.8;
}

.options {
  height: 156rpx;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.options .option-item {
  width: 20%;
  height: 156rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  box-sizing: border-box;
}

.options .option-item .option-img {
  height: 60rpx;
  width: 60rpx;
  margin-bottom: 12rpx;
}

image {
  border-radius: 0;
  height: 100%;
  width: 100%;
}

.option-item text {
  font-family: PingFangSC-Regular;
  font-size: 24rpx;
  color: #333;
}

.account {
  margin-top: 20rpx;
  height: 156rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
}

.account .account-item {
  width: 20%;
  height: 156rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.account .account-item .account-img, .service .service-item .service-img{
  height: 60rpx;
  width: 60rpx;
  margin-bottom: 12rpx;
}

.account .account-item .num {
  font-size: 36rpx;
  color: #666;
  margin-bottom: 24rpx;
}

.account .account-item text {
  font-size: 24rpx;
  color: #666;
}

.account  .account-item .active {
  color: #e3656f;
}

.service {
  height: 160rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fff;
}

.service .service-item {
  height: 160rpx;
  display: flex;
  width: 25%;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.service .service-item text{
  color: #333;
  font-size: 24rpx;
}
.footer {
  position: fixed;
  bottom: 0rpx;
  display: inline-flex;
  height: 100rpx;
  width: 750rpx;
  color: #333;
  background-color: #fff;
}
.footer .fill{
  height:68rpx;
}
.footer .tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100rpx;
}

.footer .tab .img {
  height: 60rpx;
  width: 60rpx;
}

.footer .tab .tab-name {
  font-size: 28rpx;
  color: #c0c0c9;
}
.footer .tab .active{
  color: #E46569;
}