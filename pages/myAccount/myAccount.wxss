/* pages/myAccount/myAccount.wxss */

page {
  background-image: linear-gradient(-136deg, #e3657a 0%, #e4654d 100%);
}

.container .title-item {
  margin-top: 90rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: row;
  color: #fff;
  font-size: 36rpx;
}

.container .title-item text {
  padding: 0 0 15rpx 0;
  border-bottom: 2rpx solid transparent;
}

.container .title-item .active {
  border-bottom-color: #fff;
}

.swiper {
  position: relative;
  margin-top: 74rpx;
  width: 100%;
  height: 752rpx;
}

.swiper-item {
  position: absolute;
  width: 568rpx !important;
}

.swiper-item:nth-child(1) {
  margin-left: 60rpx;
}

.swiper-item:nth-child(2) {
  margin-left: 100rpx;
}

.swiper-item:nth-child(3) {
  margin-left: 120rpx;
}

.swiper-item .photo-bg {
  width: 568rpx;
  margin: 0 auto;
  height: 752rpx;
}

.swiper-item .photo-bg-2 {
  position: absolute;
  top: 110rpx;
  z-index: 1000;
  left: -3rpx;
  right: 0;
  width: 576rpx;
  height: 48rpx;
}

.swiper-item .img {
  position: absolute;
  width: 160rpx;
  height: 160rpx;
  margin: auto;
  top: 54rpx;
  z-index: 1000;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background-color: #fff;
}

.swiper-item .pink {
  top: 60rpx;
}

.swiper-item .img image {
  width: 160rpx;
  height: 160rpx;
}

.swiper-item .img .diamond {
  width: 160rpx;
  height: 160rpx;
}

.swiper-item .content {
  position: absolute;
  top: 258rpx;
  width: 568rpx;
  text-align: center;
}

.swiper-item .content .balance {
  font-size: 28rpx;
  color: #999;
}

.swiper-item .content .num {
  margin-top: 36rpx;
  font-size: 72rpx;
  color: #e3656f;
  margin-bottom: 160rpx;
}

.swiper-item .content .yellow {
  margin-top: 36rpx;
  font-size: 72rpx;
  color: #f1a244;
  margin-bottom: 160rpx;
}

.swiper-item .content .tip {
  font-size: 30rpx;
  color: #cf8b61;
}

.header-word {
  top: 100rpx;
  z-index: 1000;
  color: #e3656f;
  left: 172rpx;
  font-size: 72rpx;
  position: absolute;
}
.main-word{
  position: absolute;
  top: 300rpx;
  width: 568rpx;
  height: 400rpx;
  font-size: 46rpx;
  color: #e3656f;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer-word{
   position: absolute;
   z-index: 1000;
    bottom: 150rpx;
   font-size: 24rpx;
   color: #e3656f;
    width: 568rpx;
    left: 176rpx;
}
